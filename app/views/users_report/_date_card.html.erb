<%@attendances_date.each do |day|%>

<div class="m-2">
  <div class="bg-white p-2 rounded-lg shadow-md">
    <h1 class="text-l font-bold"><%= day.date.to_date.strftime("%d/%m/%Y") %></h1>
    <div class="mt-4 mb-4">
       <%=  ((day.clock_out  - day.clock_in )/3600).to_i %> - hours
    </div>
    <h3 class="text-xs uppercase">Any Exception:</h3>
    <h2 class="tracking-wide">
      <%= day.exception ? day.exception : "NO" %>
    </h2>
  </div>

</div>

<% end %>