
<% content_for :name do %>

  <p class="flex justify-center text-xl font-bold text-gray-700"> AMANJ ADNAN OMER</p>

<% end %>


<% content_for :admin_content do %>

  <div class="m-6">

    <div class="overflow-x-auto shadow-md sm:rounded-lg">

      <div class="flex flex-row justify-between  items-center bg-yellow-300">

          <div class="m-3"><%= @date %></div>
          <div class="mt-1"><%= @user.user_profile.nmae %></div>
          <div class="m-3">User ID : <%= @user.id %></div>
      </div>

      <div class="flex flex-row justify-center  items-center bg-yellow-300">
        <div class="">
          <div class="mt-2 mr-12">Position : <%= @user.user_profile.position %>  --   Office : <%= @user.user_workflow.office.name %>    --  Workflow : <%= @user.user_workflow.workflow_name %></div>
        </div>
      </div>

      <div class="flex flex-row justify-center  items-center bg-yellow-100">
        <div class="">
          <div class="grid grid-cols-8 gap-x-8 gap-y-4 mt-4 mr-12">
            <%= render partial: "users_report/date_card", object: @attendances_date  %>
          </div>
        </div>
      </div>
    </div>

  </div>

  <%= link_to "Print" , admin_monthly_report_print_path(user_id:@user , month:@month) %>

<% end %>