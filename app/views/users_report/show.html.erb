<% content_for :name do %>
  <p>Attendance Report</p>

  <%#= link_to "Monthly Report" , admin_monthly_report_path(user_id:@user.id) , class:"ml-2 px-4 py-1 text-sm text-indigo-600 hover:bg-indigo-300 bg-indigo-200 rounded-full"%>
<!--  <input type="month" id="start" name="start" min="2018-03"  max="2065-03" value="2018-05">-->

  <%= form_tag(admin_monthly_report_path, method: :get , remote: true , html: {class:"mt-8  flex "}) do |f| %>
    <div class="flex flex-col  w-full justify-center items-center">
      <input type="month" id="start" name="month" min="2018-03"  max="2065-03" value="2018-05">
      <%= hidden_field_tag :user_id, @user.id %>
      <div class="m-3">
        <%= submit_tag "Monthly Report" ,class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>

<% end %>


<% content_for :admin_content do %>
  <div class="overflow-auto ">

    <div class="mt-10 mx-3 justify-center">



      <div class=" border-b border-gray-200 shadow ">
        <table class="w-full divide-y  divide-gray-300 ">
          <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-2  text-gray-700">
              ID
            </th>
            <th class="px-6 py-2 text-gray-700">
              Email
            </th>
            <th class="px-6 py-2 text-gray-700">
              Date
            </th>
            <th class="px-6 py-2 text-gray-700">
              Clock In
            </th>
            <th class="px-6 py-2 text-gray-700">
              Clock Out
            </th>

            <th class="px-6 py-2 text-gray-700">
              Exception
            </th>

          </tr>
          </thead>

          <%= render partial: "users_report/attendances", collection: @attendances ,object: @user %>

        </table>
      </div>


    </div>

  </div>
<% end %>


