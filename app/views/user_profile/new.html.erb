<% content_for :name do %>
  Create User Profile
<% end %>


<div class="flex justify-center w-auto">
  <% flash.each do |type, msg| %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"><%=type %>!</strong>
      <span class="block sm:inline"><%=msg %></span>

    </div>
  <% end %>
</div>


<% content_for :admin_content do %>

  <div class="mt-12">

    <div class="flex items-center justify-center  ">
      <div class=" w-5/6 space-y-8">
        <div>
          <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Create User Profile
          </h2>
        </div>

        <%= form_with model: @user_profile ,url:user_profile_index_path , html: {class:"mt-8  grid grid-cols-2 gap-4"} do |f| %>
          <div class="</div">
            <%= f.label :email %><br />
           <% options = options_from_collection_for_select(@user_email, 'id', 'email' ) %>
           <%= f.select :user_id,  options,{ include_blank: true } , class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>

          <div class="field">
            <%= f.label :Name %><br />
            <%= f.text_field :nmae, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>

          <div class="field">
            <%= f.label :Address%><br />
            <%= f.text_field :adress, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>


          <div class="field">
            <%= f.label :Birthdate %><br />
            <%= f.date_field :date_of_berth, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>

          <div class="">
           <p class="font-bold mb-2"> Contract duration</p>
            <div   class="flex">
              <div class="flex">
                <p class="w-auto px-2 py-2">Start from</p>
                <%= f.date_field :start_date, class:"appearance-none rounded-none relative block w-auto  py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
              </div>


              <div class="flex">
                <p class="w-auto px-2 py-2">to</p>
                <%= f.date_field :end_of_contarct, class:"appearance-none rounded-none relative block w-auto py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
              </div>
            </div>
          </div>



          <div class="field">
            <%= f.label :"Monthly salary"%><br />
            <%= f.text_field :monthly_salary, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>

          <div class="field">
            <%= f.label :"Profile Picture"%><br />
            <%= f.file_field :avatar, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>


          <div class="field">
            <%= f.label :"Education degree"%><br />
            <%= f.text_field :educational_degree, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>


          <div class="field">
            <%= f.label :"Position"%><br />
            <%= f.text_field :position, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>


          <div class="field">
            <%= f.label :"Country"%><br />
            <%= f.text_field :working_country, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>

          <div class="field">
            <%= f.label :"City"%><br />
            <%= f.text_field :working_city, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>


          <div class="field">
            <%= f.label :"Office"%><br />
            <%= f.text_field :working_office, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>


          <div class="field">
            <%= f.label :"Line Manager"%><br />
            <%= f.text_field :line_manager, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>

          <div class="</div">
            <%= f.label :Gender %><br />
            <% options =  options_for_select([['Female', 'female'], ['Male', 'male']]) %>
            <%= f.select :gender,  options,{ include_blank: true } , class:" appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>



          <div class="w-1/2">
            <%= f.submit "Create Profile" ,class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
          </div>
        <% end %>



      </div>
    </div>

  </div>

<% end %>