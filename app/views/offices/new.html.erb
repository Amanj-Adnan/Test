
<% content_for :name do %>
  Country : <%=@country.name %> , City : <%=@city.name %>
  <div class="flex justify-center w-auto">
    <% flash.each do |type, msg| %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold"><%=type %>!</strong>
        <span class="block sm:inline"><%=msg %></span>

      </div>
    <% end %>
  </div>
<% end %>


<% content_for :admin_content do %>
  <div class="flex flex-col m-3 w-full justify-center">



    <%= form_with model: @office ,url:admin_office_path(:city => @city.id ), remote: true , html: {class:"mt-8  flex "} do |f| %>

      <div class="flex flex-col m-3 w-full justify-center items-center ">
        <div class="flex flex-col  w-full justify-center items-center">
          <div class="w-1/2">
            <%= f.label :"Office Name:"%><br />
            <%= f.text_field :name, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>

          <div class="w-1/2">
            <%= f.label :"Address:"%><br />
            <%= f.text_field :address, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>


          <div class="w-1/2">
            <%= f.label :"Location:"%><br />
            <%= f.text_field :location, class:"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"%>
          </div>



          <div class="m-3">
            <%= f.submit "Add New Office" ,class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

          </div>
        </div>

        <span class="w-full mt-3  mr-6 p-0.5 bg-black "></span>

        <span class=" mt-6  font-bold text-2xl text-black">Offices</span>

      </div>


    <%end%>

    <%= render partial: "offices/offices", collection:  @offices,  as: :office%>

  </div>


<% end %>
